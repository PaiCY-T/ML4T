# ML4T Production Environment Configuration
# Copy to .env and customize for your environment

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8080
WORKERS=1

# Model Configuration
MODEL_PATH=/app/models/lightgbm_alpha.pkl
MAX_WORKERS=4
BATCH_SIZE=500
MAX_LATENCY_MS=100
ENABLE_GPU=false

# Email Alerts (optional)
ALERT_EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_RECIPIENTS=admin@yourcompany.com,trader@yourcompany.com

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=secure-password-change-me

# Database (if using)
DATABASE_URL=postgresql://user:password@db:5432/ml4t

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security (if implementing authentication)
SECRET_KEY=your-secret-key-change-me
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Taiwan Market Data (customize for your data provider)
MARKET_DATA_API_KEY=your-api-key
MARKET_DATA_URL=https://api.your-provider.com

# FinLab Integration (if using)
FINLAB_TOKEN=your-finlab-token

# Monitoring Thresholds
MIN_IC_THRESHOLD=0.03
MAX_RMSE_THRESHOLD=0.15
MIN_SHARPE_THRESHOLD=1.0
MAX_DRAWDOWN_THRESHOLD=0.20
FEATURE_DRIFT_THRESHOLD=0.05

# Resource Limits
MAX_MEMORY_GB=16
MAX_CPU_CORES=4